<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>SignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>SignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListPizza</servlet-name>
        <servlet-class>ListPizza</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderIn</servlet-name>
        <servlet-class>OrderIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserValidation</servlet-name>
        <servlet-class>UserValidation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPizza</servlet-name>
        <servlet-class>AddPizza</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePizza</servlet-name>
        <servlet-class>DeletePizza</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderValidation</servlet-name>
        <servlet-class>OrderValidation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/SignUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListPizza</servlet-name>
        <url-pattern>/ListPizza</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderIn</servlet-name>
        <url-pattern>/OrderIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserValidation</servlet-name>
        <url-pattern>/UserValidation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPizza</servlet-name>
        <url-pattern>/AddPizza</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePizza</servlet-name>
        <url-pattern>/DeletePizza</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderValidation</servlet-name>
        <url-pattern>/OrderValidation</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
